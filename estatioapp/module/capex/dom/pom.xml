<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.estatio</groupId>
        <artifactId>estatio</artifactId>
        <version>1.17.0</version>
        <relativePath>../../../../pom.xml</relativePath>
    </parent>

    <artifactId>estatio-dom-capex</artifactId>
    <packaging>jar</packaging>
    
    <name>Estatio (Open Source) Module - Capex</name>
    <description>
        Capex module
    </description>

    <build>
        <resources>
            <resource>
                <filtering>false</filtering>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <filtering>false</filtering>
                <directory>src/main/java</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>com.github.odavid.maven.plugins</groupId>
                <artifactId>mixin-maven-plugin</artifactId>
                <version>0.1-alpha-39</version>
                <extensions>true</extensions>
                <configuration>
                    <mixins>
                        <mixin>
                            <groupId>com.danhaywood.mavenmixin</groupId>
                            <artifactId>standard</artifactId>
                        </mixin>
                        <mixin>
                            <groupId>com.danhaywood.mavenmixin</groupId>
                            <artifactId>datanucleusenhance</artifactId>
                        </mixin>
                        <mixin>
                            <groupId>com.danhaywood.mavenmixin</groupId>
                            <artifactId>staticanalysis</artifactId>
                        </mixin>
                        <mixin>
                            <groupId>com.danhaywood.mavenmixin</groupId>
                            <artifactId>surefire</artifactId>
                        </mixin>
                    </mixins>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>org.incode.ecp.iso20022</groupId>
            <artifactId>incode-ecp-iso20022-pain</artifactId>
            <version>001.001.003</version>
        </dependency>

        <dependency>
            <groupId>org.estatio</groupId>
            <artifactId>estatio-dom-party</artifactId>
        </dependency>

		<dependency>
            <groupId>org.estatio</groupId>
            <artifactId>estatio-dom-assetfinancial</artifactId>
        </dependency>

		<dependency>
            <groupId>org.estatio</groupId>
            <artifactId>estatio-dom-invoice</artifactId>
        </dependency>

		<dependency>
            <groupId>org.estatio</groupId>
            <artifactId>estatio-dom-project</artifactId>
        </dependency>

        <dependency>
            <groupId>org.estatio</groupId>
            <artifactId>estatio-dom-budget</artifactId>
        </dependency>

		<dependency>
            <groupId>org.estatio</groupId>
            <artifactId>estatio-dom-tax</artifactId>
        </dependency>

        <dependency>
            <groupId>org.isisaddons.wicket.pdfjs</groupId>
            <artifactId>isis-wicket-pdfjs-cpt</artifactId>
        </dependency>

        <!-- testing -->
        <dependency>
            <groupId>org.incode.module.unittestsupport</groupId>
            <artifactId>incode-module-unittestsupport-dom</artifactId>
        </dependency>
        <dependency>
            <groupId>org.incode.module.integtestsupport</groupId>
            <artifactId>incode-module-integtestsupport-dom</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.isis.mavendeps</groupId>
            <artifactId>isis-mavendeps-testing</artifactId>
            <type>pom</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.estatio</groupId>
            <artifactId>estatio-dom-numerator</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>

        <!-- provided -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>


    </dependencies>

</project>
